#include<stdio.h>
int
main ()
{
 
int i, space, rows, k = 0;
 
printf ("Enter number of rows: ");
 
scanf ("%d", &rows);
 
for (i = 1; i <= rows; ++i, k = 0)
   
    {
     
for (space = 1; space <= rows - i; ++space)

{
 
printf ("  ");

}
     
int s = i-1;
     
while (k != 2 * i - 1)

{
 if(k<i)
 {
     printf ("%d ", ++s);
     ++k;
 }

else
{
    printf ("%d ",--s);
    ++k;
}
   
}
printf ("\n");
}
}
